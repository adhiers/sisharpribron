@model SampleASPMVC.Models.Car
@{
    ViewData["Title"] = "Update Car";
}

<div class="col-md-6">
    <h3>Update Car</h3>
    <form asp-action="Update" method="post">
        <input type="hidden" name="CarId" value="@Model.CarId" />
        <div class="form-group">
            <label>Car ID:</label>
            <input type="text" class="form-control" name="CarId" value="@Model.CarId" readonly />
        </div>
        <div class="form-group">
            <label>VIN:</label>
            <input type="text" class="form-control" name="VIN" value="@Model.VIN" />
        </div>
        <div class="form-group">
            <label>Model Type:</label>
            <input type="text" class="form-control" name="ModelType" value="@Model.ModelType"/>
        </div>
        <div class="form-group">
            <label>Fuel Type:</label>
            <input type="text" class="form-control" name="FuelType" value="@Model.FuelType"/>
        </div>
        <div class="form-group">
            <label>Base Price:</label>
            <input type="number" class="form-control" name="BasePrice" value="@Model.BasePrice"/>
        </div>
        <button type="submit" class="btn btn-primary btn-sm">Update</button>
        <a asp-action="Index" class="btn btn-secondary btn-sm">Cancel</a>

    </form>
</div>